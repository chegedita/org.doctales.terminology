<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:dita="http://dita-ot.sourceforge.net" name="dita2webhelp-termbrowser">
    
    <target name="dita2webhelp-termbrowser"
        depends="doctales.hdf,
                 dita2webhelp,
                 doctales.copy.css,
                 doctales.copy.hdf"/>
	
	<target name="doctales.copy.css">
		<copy todir="${output.dir}/oxygen-webhelp/resources">
			<fileset dir="${dita.plugin.org.doctales.terminology.dir}/css/flag-icon-css/"/>
		</copy>
	</target>
	
	<target name="doctales.hdf">
		<property name="args.hdf" value="${dita.plugin.org.doctales.terminology.dir}/hdf/hdf.xml"/>
	</target>
	
	<target name="doctales.copy.hdf">
		<copy todir="${output.dir}/oxygen-webhelp/resources/hdf/">
			<file file="${dita.plugin.org.doctales.terminology.dir}/hdf/hdf.xml"/>
		</copy>
	</target>
</project>
